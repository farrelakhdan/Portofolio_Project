<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterAvtivity">

    <ImageView
        android:id="@+id/upper"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/yellow_stroke"
        android:backgroundTint="#F8D20C"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="50dp"
        android:paddingEnd="50dp">

        <EditText
            android:id="@+id/edt_register_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/yellow_stroke_all"
            android:layout_marginBottom="15dp"
            android:drawableStart="@drawable/baseline_person_24"
            android:paddingStart="10dp"
            android:hint="username"
            android:textColorHint="#F8D20C"/>
        <EditText
            android:id="@+id/edt_register_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/yellow_stroke_all"
            android:layout_marginBottom="15dp"
            android:drawableStart="@drawable/baseline_account_box_24"
            android:paddingStart="10dp"
            android:hint="full name"
            android:textColorHint="#F8D20C"/>
        <EditText
            android:id="@+id/edt_register_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/yellow_stroke_all"
            android:layout_marginBottom="15dp"
            android:drawableStart="@drawable/baseline_email_24"
            android:paddingStart="10dp"
            android:hint="email"
            android:textColorHint="#F8D20C"/>
        <EditText
            android:id="@+id/edt_register_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/yellow_stroke_all"
            android:layout_marginBottom="15dp"
            android:drawableStart="@drawable/baseline_phone_24"
            android:paddingStart="10dp"
            android:hint="no hp"
            android:textColorHint="#F8D20C"/>
        <EditText
            android:id="@+id/edt_register_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/yellow_stroke_all"
            android:drawableStart="@drawable/baseline_key_24"
            android:paddingStart="10dp"
            android:hint="password"
            android:textColorHint="#F8D20C"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/edt_register_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/yellow_stroke_all"
            android:drawableStart="@drawable/baseline_key_24"
            android:paddingStart="10dp"
            android:hint="confirm password"
            android:textColorHint="#F8D20C"
            android:layout_marginBottom="35dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_back"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@string/back"
                android:background="@drawable/yellow_stroke_all_25"
                android:textColor="#F8D20C"
                android:textAllCaps="false"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_register"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="50dp"/>
            <Button
                android:id="@+id/btn_register"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@string/register"
                android:background="@drawable/btn_background"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_back"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>