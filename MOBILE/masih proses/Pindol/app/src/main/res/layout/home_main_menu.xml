<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/home_main_menu_1"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:background="@drawable/bg_menu_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="30dp"
        android:gravity="bottom">

        <Button
            android:id="@+id/btn_home_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:background="@drawable/bg_btn_logout"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_home_main_menu_1_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_main_menu_1"
        android:background="@drawable/baseline_close_24"/>
</androidx.constraintlayout.widget.ConstraintLayout>